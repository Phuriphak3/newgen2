#include <Wire.h>
#include <LiquidCrystal_I2C.h>
#include <RTClib.h>

// กำหนดขา I2C (ESP32)
#define I2C_SDA 21
#define I2C_SCL 22

// กำหนด Address (แก้ตรงนี้ถ้าสแกนเจอค่าอื่น)
#define LCD_ADDR 0x27  // หรือ 0x3F
#define RTC_ADDR 0x68  // DS1307 address มาตรฐานคือ 0x68

// สร้าง Object
LiquidCrystal_I2C lcd(LCD_ADDR, 16, 2);
RTC_DS1307 rtc;

char daysOfTheWeek[7][12] = {"Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"};

void setup() {
  Serial.begin(115200);
  
  // เริ่มต้น I2C ที่ขาตาม Schematic
  Wire.begin(I2C_SDA, I2C_SCL);

  // --- ส่วนของ RTC ---
  if (!rtc.begin()) {
    Serial.println("Couldn't find RTC");
    while (1);
  }

  if (!rtc.isrunning()) {
    Serial.println("RTC is NOT running, let's set the time!");
    // ตั้งเวลาเริ่มต้นเป็นเวลาที่ Compile โค้ดนี้
    rtc.adjust(DateTime(F(_DATE_), F(_TIME_)));
  }

  // --- ส่วนของ LCD ---
  lcd.init();
  lcd.backlight();
  lcd.setCursor(0, 0);
  lcd.print("System Start...");
  delay(2000);
  lcd.clear();
}

void loop() {
  DateTime now = rtc.now();

  // แสดงวันที่ บรรทัดบน
  lcd.setCursor(0, 0);
  lcd.print("Date: ");
  lcd.print(now.day(), DEC);
  lcd.print('/');
  lcd.print(now.month(), DEC);
  lcd.print('/');
  lcd.print(now.year(), DEC);

  // แสดงเวลา บรรทัดล่าง
  lcd.setCursor(0, 1);
  lcd.print("Time: ");
  if (now.hour() < 10) lcd.print('0');
  lcd.print(now.hour(), DEC);
  lcd.print(':');
  if (now.minute() < 10) lcd.print('0');
  lcd.print(now.minute(), DEC);
  lcd.print(':');
  if (now.second() < 10) lcd.print('0');
  lcd.print(now.second(), DEC);

  // จังหวะนี้ Logic Analyzer จะจับสัญญาณ I2C ได้เยอะมาก
  // เพราะมีการคุยกับทั้ง RTC (อ่านเวลา) และ LCD (ส่งตัวอักษร) สลับกันไปมา
  delay(1000);
}
